generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sale {
  id          Int      @id @default(autoincrement())
  productId   Int
  customerId  Int
  quantity    Int
  total       Float
  status      String   @default("new")
  date        DateTime @default(now())
}
